brooklyn.catalog:
  version: &nexusVersion "1.0.0-SNAPSHOT" # BROOKLYN_NEXUS_VERSION
  iconUrl: &nexusIconUrl "https://github.com/sonatype.png"
  items:
    - "https://raw.githubusercontent.com/brooklyncentral/common-catalog-utils/master/common-tests/src/main/resources/commontests/common.tests.bom"
    - id: nexus-2-tests
      version: *nexusVersion
      itemType: template
      iconUrl: *nexusIconUrl
      name: "Nexus Repository OSS 2.X Tests"
      item:
        services:
          - type: nexus-2
            id: nexus-2
          - type: test-case
            name: "Nexus 2.X Tests"
            brooklyn.config:
              timeout: 1h
              targetId: nexus-2
              process.grep.name: "[n]exus"
            brooklyn.children:
              - type: assert-up-and-running-initial
                name: "1. Nexus 2.X up and running"
              - type: assert-reachable
                name: "2. Nexus 2 UI reachable"
                brooklyn.config:
                  endpointSensor: main.uri
                  timeout: 5m
              - type: assert-restart-process
                name: "3. Nexus 2.X restart process"
              - type: assert-stop-and-restart-process
                name: "4. Nexus 2.X stop and restart process"
